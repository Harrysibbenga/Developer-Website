# .env.example
# Copy this file to .env.local and update the values

# ===== SITE CONFIGURATION =====
PUBLIC_SITE_URL=http://localhost:4321
PUBLIC_SITE_NAME="Harry Sibbenga - Web Development Services"
PUBLIC_CONTACT_EMAIL=sibbengaharry@gmail.com
PUBLIC_CONTACT_PHONE="+44XXXXXXXXXX"

# ===== API CONFIGURATION =====
# Backend API URL (update when backend is deployed)
PUBLIC_API_BASE_URL=http://localhost:8000
PUBLIC_API_TIMEOUT=10000
PUBLIC_API_RETRIES=3

# API Key for authenticated endpoints (if needed)
API_KEY=your-api-key-here

# ===== ANALYTICS =====
# Google Analytics (Optional)
PUBLIC_GA_MEASUREMENT_ID=GA_MEASUREMENT_ID
PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# ===== EMAIL CONFIGURATION =====
# For contact forms and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# ===== DEVELOPMENT =====
# Enable debug logging
DEBUG=false
NODE_ENV=development

# ===== SECURITY =====
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:4321,https://yourdomain.com

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

REDIS_URL=redis://localhost:6379
# For production with authentication:
# REDIS_URL=redis://username:password@redis-host:6379

# ===== DEPLOYMENT =====
# Vercel
VERCEL_URL=your-vercel-url.vercel.app

# Railway (for backend)
RAILWAY_URL=your-backend.railway.app

# ===== DATABASE (Backend) =====
# PostgreSQL connection (for production backend)
DATABASE_URL=postgresql://user:password@localhost:5432/webservices

# SQLite (for development backend)
DATABASE_URL=sqlite:///./webservices.db