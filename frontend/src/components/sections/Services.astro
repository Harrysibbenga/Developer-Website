---
// src/components/sections/Services.astro
/**
 * Services section showcasing development offerings
 * Features detailed service cards with pricing and technology stacks
 */

import { SERVICES } from '../../utils/constants'
import TechIcon from '../decor/TechIcon.astro'
import ServiceCardsContainer from './ServiceCardsContainer.astro'
---

<section id="services" class="py-20 bg-gradient-to-br from-gray-50 to-blue-50 relative overflow-hidden">
  <!-- Background Tech Icons -->
  <div aria-hidden="true" class="absolute inset-0 overflow-hidden opacity-30">
    <TechIcon 
      tech="python" 
      size="small"
      position={{ top: "15%", left: "5%" }} 
      animation="float"
      delay={0.5}
      opacity={0.1}
    />
    <TechIcon 
      tech="vue" 
      size="medium"
      position={{ top: "25%", right: "8%" }} 
      animation="pulse"
      delay={1.2}
      opacity={0.08}
    />
    <TechIcon 
      tech="docker" 
      size="small"
      position={{ bottom: "20%", left: "12%" }} 
      animation="rotate"
      delay={2.0}
      opacity={0.1}
    />
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Development
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Services
        </span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Professional development services tailored to your business needs. 
        From web applications to data processing systems, I deliver scalable solutions.
      </p>
    </div>

    <!-- Services Grid -->
    <ServiceCardsContainer
      title=""
      description=""
      variant="homepage"
      maxCards={3}
      className="bg-white"
    />

    <!-- Additional Services Info -->
    <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12 animate-on-scroll">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div>
          <h3 class="text-3xl font-bold text-gray-900 mb-6">
            Why Choose My Development Services?
          </h3>
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <div>
                <h4 class="text-xl font-semibold text-gray-900 mb-2">Fast Development</h4>
                <p class="text-gray-600">Rapid prototyping and development using proven Python frameworks and modern development practices.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="text-xl font-semibold text-gray-900 mb-2">Production Ready</h4>
                <p class="text-gray-600">Code that's tested, documented, and ready for deployment with proper error handling and security.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="text-xl font-semibold text-gray-900 mb-2">Ongoing Support</h4>
                <p class="text-gray-600">Post-deployment support, maintenance, and updates to keep your applications running smoothly.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Content - Process -->
        <div>
          <h4 class="text-2xl font-bold text-gray-900 mb-8">Development Process</h4>
          <div class="space-y-6">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm mr-4">1</div>
              <div>
                <h5 class="font-semibold text-gray-900">Requirements Analysis</h5>
                <p class="text-gray-600 text-sm">Understanding your needs and technical requirements</p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm mr-4">2</div>
              <div>
                <h5 class="font-semibold text-gray-900">Architecture Design</h5>
                <p class="text-gray-600 text-sm">Planning scalable and maintainable system architecture</p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm mr-4">3</div>
              <div>
                <h5 class="font-semibold text-gray-900">Development & Testing</h5>
                <p class="text-gray-600 text-sm">Writing clean, tested code with regular progress updates</p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm mr-4">4</div>
              <div>
                <h5 class="font-semibold text-gray-900">Deployment & Support</h5>
                <p class="text-gray-600 text-sm">Production deployment with documentation and ongoing support</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16 animate-on-scroll">
      <h3 class="text-3xl font-bold text-gray-900 mb-4">
        Ready to Start Your Project?
      </h3>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Let's discuss your requirements and build something amazing together.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-300"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-2.4-.32l-3.6 1.2 1.2-3.6A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z"/>
          </svg>
          Start Your Project
        </a>
        
        <a
          href="/portfolio"
          class="inline-flex items-center px-8 py-4 border-2 border-blue-600 text-blue-600 rounded-xl font-semibold hover:bg-blue-600 hover:text-white transition-all duration-300"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          View Portfolio
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .service-card {
    /* Add subtle border gradient */
    background: linear-gradient(white, white) padding-box,
                linear-gradient(135deg, #3b82f6, #8b5cf6) border-box;
    border: 2px solid transparent;
  }
  
  .service-card:hover {
    border-color: transparent;
    background: linear-gradient(white, white) padding-box,
                linear-gradient(135deg, #2563eb, #7c3aed) border-box;
  }
  
  /* Smooth animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }
  
  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  .stagger-animation {
    transition-delay: var(--animation-delay, 0ms);
  }
  
  /* Service card hover effects */
  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .service-card:hover::before {
    opacity: 1;
  }
</style>