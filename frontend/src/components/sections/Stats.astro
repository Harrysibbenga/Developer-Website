---
// src/components/sections/Stats.astro
/**
 * Statistics section showcasing business metrics and achievements
 */

import { STATS, TECHNOLOGIES } from '../../utils/constants'
import TechIcon from '../decor/TechIcon.astro'
---

<section id="stats" class="py-20 bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 text-white relative overflow-hidden">
  <!-- Background Tech Icons -->
  <div aria-hidden="true" class="absolute inset-0 overflow-hidden opacity-10">
    <TechIcon 
      tech="python" 
      size="xl"
      position={{ top: "10%", left: "5%" }} 
      animation="float"
      delay={0.5}
      opacity={0.15}
      blur={true}
    />
    <TechIcon 
      tech="django" 
      size="large"
      position={{ top: "20%", right: "8%" }} 
      animation="pulse"
      delay={1.2}
      opacity={0.12}
      blur={true}
    />
    <TechIcon 
      tech="vue" 
      size="xl"
      position={{ bottom: "15%", left: "10%" }} 
      animation="rotate"
      delay={2.0}
      opacity={0.15}
      blur={true}
    />
    <TechIcon 
      tech="docker" 
      size="large"
      position={{ bottom: "25%", right: "12%" }} 
      animation="float"
      delay={1.8}
      opacity={0.12}
      blur={true}
    />
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl lg:text-5xl font-bold mb-6">
        Proven
        <span class="bg-gradient-to-r from-cyan-300 to-yellow-300 bg-clip-text text-transparent">
          Results
        </span>
      </h2>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto leading-relaxed">
        Numbers that reflect my commitment to delivering quality solutions and building lasting client relationships.
      </p>
    </div>

    <!-- Main Stats Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      <div class="stat-card text-center animate-on-scroll stagger-animation">
        <div class="stat-number text-5xl lg:text-6xl font-black mb-2 bg-gradient-to-br from-cyan-300 to-blue-300 bg-clip-text text-transparent">
          {STATS.experience}
        </div>
        <div class="stat-label text-blue-200 font-medium">
          {STATS.experienceLabel}
        </div>
        <div class="stat-description text-sm text-blue-300 mt-2">
          Building scalable solutions
        </div>
      </div>

      <div class="stat-card text-center animate-on-scroll stagger-animation">
        <div class="stat-number text-5xl lg:text-6xl font-black mb-2 bg-gradient-to-br from-green-300 to-cyan-300 bg-clip-text text-transparent">
          {STATS.projects}
        </div>
        <div class="stat-label text-blue-200 font-medium">
          {STATS.projectsLabel}
        </div>
        <div class="stat-description text-sm text-blue-300 mt-2">
          From startups to enterprises
        </div>
      </div>

      <div class="stat-card text-center animate-on-scroll stagger-animation">
        <div class="stat-number text-5xl lg:text-6xl font-black mb-2 bg-gradient-to-br from-purple-300 to-pink-300 bg-clip-text text-transparent">
          {STATS.clients}
        </div>
        <div class="stat-label text-blue-200 font-medium">
          {STATS.clientsLabel}
        </div>
        <div class="stat-description text-sm text-blue-300 mt-2">
          Long-term partnerships
        </div>
      </div>

      <div class="stat-card text-center animate-on-scroll stagger-animation">
        <div class="stat-number text-5xl lg:text-6xl font-black mb-2 bg-gradient-to-br from-yellow-300 to-orange-300 bg-clip-text text-transparent">
          {STATS.technologies}
        </div>
        <div class="stat-label text-blue-200 font-medium">
          {STATS.technologiesLabel}
        </div>
        <div class="stat-description text-sm text-blue-300 mt-2">
          Modern tech stack
        </div>
      </div>
    </div>

    <!-- Additional Metrics -->
    <div class="grid md:grid-cols-3 gap-8 animate-on-scroll">
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
        <div class="flex items-center space-x-4 mb-4">
          <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <div class="text-2xl font-bold">100%</div>
            <div class="text-blue-200 text-sm">Project Success Rate</div>
          </div>
        </div>
        <p class="text-blue-100 text-sm">
          Every project delivered on time and within scope, ensuring client satisfaction.
        </p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
        <div class="flex items-center space-x-4 mb-4">
          <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <div>
            <div class="text-2xl font-bold">24hr</div>
            <div class="text-blue-200 text-sm">Response Time</div>
          </div>
        </div>
        <p class="text-blue-100 text-sm">
          Quick turnaround on inquiries and project updates to keep things moving.
        </p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
        <div class="flex items-center space-x-4 mb-4">
          <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <div>
            <div class="text-2xl font-bold">95%</div>
            <div class="text-blue-200 text-sm">Client Retention</div>
          </div>
        </div>
        <p class="text-blue-100 text-sm">
          Long-term relationships built on trust, quality, and reliable support.
        </p>
      </div>
    </div>
  </div>
</section>