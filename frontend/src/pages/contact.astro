---
// src/pages/contact.astro
/**
 * Contact page with booking form and contact information
 * Updated to use Vue components for interactive elements
 */

import Layout from '../layouts/Layout.astro'
import ContactTabs from '../components/sections/ContactTabs.vue'
import FAQAccordion from '../components/sections/FAQAccordion.vue'
import TechIcon from '../components/decor/TechIcon.astro'
import { BUSINESS_INFO } from '../utils/constants'

const pageTitle = 'Contact Harry Sibbenga - Full Stack Development Services'
const pageDescription = 'Get in touch for your Software Solution. Free consultation and detailed quotes available. Based in Milton Keynes, serving UK businesses.'
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  canonical="/contact"
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 text-white relative overflow-hidden">
    <!-- Background Tech Icons -->
    <div aria-hidden="true" class="absolute inset-0 overflow-hidden opacity-10">
      <TechIcon 
        tech="python" 
        size="large"
        position={{ top: "10%", left: "8%" }} 
        animation="float"
        delay={0.5}
        opacity={0.15}
        blur={true}
      />
      <TechIcon 
        tech="vue" 
        size="medium"
        position={{ top: "25%", right: "12%" }} 
        animation="pulse"
        delay={1.2}
        opacity={0.12}
        blur={true}
      />
      <TechIcon 
        tech="django" 
        size="large"
        position={{ bottom: "20%", left: "15%" }} 
        animation="rotate"
        delay={2.0}
        opacity={0.15}
        blur={true}
      />
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center animate-on-scroll">
        <h1 class="text-5xl lg:text-6xl font-black mb-6 leading-tight">
          Let's Build
          <span class="block bg-gradient-to-r from-cyan-300 to-yellow-300 bg-clip-text text-transparent">
            Something Amazing
          </span>
        </h1>
        
        <p class="text-xl text-blue-100 mb-12 max-w-4xl mx-auto leading-relaxed">
          Ready to transform your ideas into powerful solutions? 
          Get a free consultation and detailed project proposal.
        </p>

        <!-- Quick Contact Options -->
        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <a 
            href={`mailto:${BUSINESS_INFO.contact.email}`}
            class="group bg-white/10 backdrop-blur-sm rounded-2xl p-6 hover:bg-white/20 transition-all duration-300 border border-white/20"
          >
            <div class="w-16 h-16 bg-blue-600/20 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Email Me</h3>
            <p class="text-blue-200 text-sm mb-2">Quick response within 24 hours</p>
            <p class="text-cyan-300 font-medium">{BUSINESS_INFO.contact.email}</p>
          </a>
          
          <a 
            href={`tel:${BUSINESS_INFO.contact.phone}`}
            class="group bg-white/10 backdrop-blur-sm rounded-2xl p-6 hover:bg-white/20 transition-all duration-300 border border-white/20"
          >
            <div class="w-16 h-16 bg-green-600/20 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Call Me</h3>
            <p class="text-blue-200 text-sm mb-2">Direct line for urgent matters</p>
            <p class="text-green-300 font-medium">{BUSINESS_INFO.contact.phone}</p>
          </a>
          
          <div class="group bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="w-16 h-16 bg-purple-600/20 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Visit Me</h3>
            <p class="text-blue-200 text-sm mb-2">Based in Milton Keynes</p>
            <p class="text-purple-300 font-medium">{BUSINESS_INFO.contact.address.city}, {BUSINESS_INFO.contact.address.country}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Forms Section - Now Vue Component -->
  <ContactTabs client:only="vue" />

  <!-- Business Information -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="animate-on-scroll">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Working With Me
          </h2>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Response Time</h3>
                <p class="text-gray-600">I typically respond to inquiries within 24 hours during business days (Monday-Friday, 9:00 AM - 6:00 PM GMT).</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Free Consultation</h3>
                <p class="text-gray-600">Every project starts with a free 30-minute consultation to understand your requirements and provide initial guidance.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Transparent Process</h3>
                <p class="text-gray-600">Clear communication, regular updates, and transparent pricing throughout the entire development process.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Content - Contact Info -->
        <div class="animate-on-scroll">
          <div class="bg-gray-50 rounded-2xl p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h3>
            
            <div class="space-y-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Email</div>
                  <a href={`mailto:${BUSINESS_INFO.contact.email}`} class="text-blue-600 hover:underline">
                    {BUSINESS_INFO.contact.email}
                  </a>
                </div>
              </div>
              
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Phone</div>
                  <a href={`tel:${BUSINESS_INFO.contact.phone}`} class="text-blue-600 hover:underline">
                    {BUSINESS_INFO.contact.phone}
                  </a>
                </div>
              </div>
              
              <div class="flex items-start">
                <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Address</div>
                  <div class="text-gray-600">
                    {BUSINESS_INFO.contact.address.area}<br/>
                    {BUSINESS_INFO.contact.address.city} {BUSINESS_INFO.contact.address.postcode}
                  </div>
                </div>
              </div>
              
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Business Hours</div>
                  <div class="text-gray-600">
                    Mon-Fri: {BUSINESS_INFO.businessHours.weekdays}<br/>
                    Weekends: {BUSINESS_INFO.businessHours.weekends}
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div class="mt-8 pt-6 border-t border-gray-200">
              <h4 class="font-semibold text-gray-900 mb-4">Connect With Me</h4>
              <div class="flex space-x-4">
                <a
                  href={BUSINESS_INFO.social.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center text-white hover:bg-gray-700 transition-colors"
                  aria-label="GitHub Profile"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
                
                <a
                  href={BUSINESS_INFO.social.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-white hover:bg-blue-700 transition-colors"
                  aria-label="LinkedIn Profile"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section - Now Vue Component -->
  <FAQAccordion client:only="vue" />

  <!-- Ready to Start Section -->
  <section class="py-20 bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center animate-on-scroll">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
        Ready to Start Your
        <span class="block bg-gradient-to-r from-cyan-300 to-yellow-300 bg-clip-text text-transparent">
          Next Project?
        </span>
      </h2>
      <p class="text-xl text-blue-100 mb-10 max-w-3xl mx-auto leading-relaxed">
        Let's discuss your requirements and create something amazing together. 
        Get started with a free consultation and detailed project proposal.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <button 
          id="start-project-btn"
          class="inline-flex items-center px-10 py-5 bg-white text-blue-600 rounded-2xl font-bold text-lg hover:bg-gray-50 transition-all duration-300 transform hover:scale-105 shadow-2xl group"
        >
          <svg class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          Start Project Inquiry
        </button>
        
        <a 
          href="/services" 
          class="inline-flex items-center px-10 py-5 border-2 border-white/30 text-white rounded-2xl font-bold text-lg hover:bg-white/10 hover:border-white/50 transition-all duration-300 backdrop-blur-sm"
        >
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4M9 7h6m-6 4h6m-6 4h6"/>
          </svg>
          View Services
        </a>
      </div>

      <!-- Contact Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-cyan-400 mb-2">24hr</div>
          <div class="text-blue-200 text-sm">Average Response Time</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-green-400 mb-2">100%</div>
          <div class="text-blue-200 text-sm">Client Satisfaction</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-purple-400 mb-2">5+</div>
          <div class="text-blue-200 text-sm">Years Experience</div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Handle CTA button click to switch to project tab
  document.addEventListener('DOMContentLoaded', () => {
    const startProjectBtn = document.getElementById('start-project-btn');
    
    if (startProjectBtn) {
      startProjectBtn.addEventListener('click', () => {
        // Scroll to contact tabs section
        const contactSection = document.querySelector('[data-component="ContactTabs"]') || 
                              document.querySelector('.contact-tabs-section');
        
        if (contactSection) {
          contactSection.scrollIntoView({ 
            behavior: 'smooth', 
            block: 'start' 
          });
          
          // Try to trigger the project tab (this will work if the Vue component is loaded)
          // We'll handle this in the Vue component via events or URL params
          const url = new URL(window.location);
          url.searchParams.set('tab', 'project');
          window.history.replaceState({}, '', url);
          
          // Dispatch custom event for Vue component to listen to
          window.dispatchEvent(new CustomEvent('switchToProjectTab'));
        }
      });
    }
  });
</script>

<style>
  /* Animation Styles */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }
  
  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
  
  /* Enhanced hover effects */
  .bg-white\/10:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      animation: none !important;
      transition: none !important;
    }
    
    html {
      scroll-behavior: auto;
    }
  }
</style>