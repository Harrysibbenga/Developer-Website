---
// src/pages/service-areas.astro
/**
 * Service areas page highlighting remote capabilities and UK local presence
 */

 import Layout from '../layouts/Layout.astro'
import { BUSINESS_INFO } from '../utils/constants'

const pageTitle = 'Service Areas - Remote Development Services & UK Local'
const pageDescription = 'Professional Python development services available remotely worldwide, with local presence in Milton Keynes and surrounding UK areas for in-person meetings when needed.'

// UK service areas with realistic descriptions
const ukServiceAreas = [
  { name: "Milton Keynes", type: "local", description: "Home base - in-person meetings available" },
  { name: "Northampton", type: "local", description: "30 minutes drive" },
  { name: "Bedford", type: "local", description: "25 minutes drive" },
  { name: "Luton", type: "local", description: "45 minutes drive" },
  { name: "Oxford", type: "regional", description: "1 hour drive" },
  { name: "Cambridge", type: "regional", description: "1 hour drive" },
  { name: "London", type: "regional", description: "1.5 hours - excellent transport links" },
  { name: "Birmingham", type: "regional", description: "1.5 hours drive" },
  { name: "Nottingham", type: "regional", description: "1.5 hours drive" },
  { name: "Leicester", type: "regional", description: "1 hour drive" },
  { name: "Coventry", type: "regional", description: "1 hour drive" },
  { name: "Reading", type: "regional", description: "1 hour drive" }
]

const globalCapabilities = [
  {
    region: "Europe",
    timezone: "GMT/CET compatible",
    highlights: ["GDPR compliant development", "Overlapping business hours", "EU data protection ready"],
    countries: ["Ireland", "France", "Germany", "Netherlands", "Belgium", "Spain", "Italy", "Nordic countries"]
  },
  {
    region: "North America", 
    timezone: "EST/PST coordination available",
    highlights: ["Flexible UK hours for US meetings", "Remote development expertise", "Agile methodology experience"],
    countries: ["United States", "Canada"]
  },
  {
    region: "Asia Pacific",
    timezone: "Early morning availability",
    highlights: ["UK morning = APAC afternoon", "Modern development practices", "Async communication ready"],
    countries: ["Australia", "New Zealand", "Singapore", "Japan", "Hong Kong"]
  },
  {
    region: "Worldwide",
    timezone: "Custom arrangements",
    highlights: ["Flexible scheduling", "Remote-first processes", "Location independent delivery"],
    countries: ["Any location with reliable internet"]
  }
]

const remoteCapabilities = [
  {
    title: "Development Tools",
    icon: "üíª",
    items: ["Git/GitHub collaboration", "Docker containerization", "CI/CD pipelines", "Cloud deployment"]
  },
  {
    title: "Communication",
    icon: "üó£Ô∏è", 
    items: ["Video conferencing ready", "Slack/Teams/Discord", "Project management tools", "Regular progress updates"]
  },
  {
    title: "Security",
    icon: "üîí",
    items: ["VPN connections", "Encrypted communications", "Secure repositories", "Data protection protocols"]
  },
  {
    title: "Flexibility",
    icon: "üåç",
    items: ["Timezone coordination", "Async development", "Flexible meeting times", "Remote-first mindset"]
  }
]
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  canonical="/service-areas"
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-gray-900 via-blue-900 to-indigo-900 text-white relative overflow-hidden">
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
          Remote Development
          <span class="block bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent">
            Services
          </span>
        </h1>
        
        <p class="text-xl text-blue-100 mb-8 max-w-4xl mx-auto">
          Professional Python development services available remotely to clients worldwide, 
          with established local presence in Milton Keynes and surrounding UK areas.
        </p>

        <!-- Key Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="text-center">
            <div class="text-3xl font-bold text-cyan-400 mb-2">üåç</div>
            <div class="text-lg font-semibold mb-1">Remote Ready</div>
            <div class="text-blue-200 text-sm">Any timezone, worldwide</div>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-bold text-green-400 mb-2">üá¨üáß</div>
            <div class="text-lg font-semibold mb-1">UK Based</div>
            <div class="text-blue-200 text-sm">Milton Keynes, England</div>
          </div>
          
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-400 mb-2">‚è∞</div>
            <div class="text-lg font-semibold mb-1">Flexible Hours</div>
            <div class="text-blue-200 text-sm">Coordinated to your needs</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Remote Capabilities -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Remote Development Capabilities
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Modern software development is naturally suited to remote collaboration. 
          I have the tools, processes, and mindset to work effectively with clients anywhere in the world.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {remoteCapabilities.map((capability) => (
          <div class="bg-gray-50 rounded-xl p-6 text-center">
            <div class="text-4xl mb-4">{capability.icon}</div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">{capability.title}</h3>
            <ul class="space-y-2">
              {capability.items.map((item) => (
                <li class="text-gray-600 text-sm">{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Global Availability -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Global Remote Availability
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          I'm equipped to work with clients in any location, with the flexibility to coordinate 
          across different timezones and working patterns.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {globalCapabilities.map((region) => (
          <div class="bg-white rounded-xl shadow-lg p-8">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{region.region}</h3>
                <p class="text-blue-600 font-medium">{region.timezone}</p>
              </div>
            </div>

            <div class="mb-6">
              <h4 class="font-semibold text-gray-900 mb-3">Capabilities:</h4>
              <ul class="space-y-2">
                {region.highlights.map((highlight) => (
                  <li class="flex items-center text-gray-600">
                    <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    {highlight}
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <h4 class="font-semibold text-gray-900 mb-3">Available for clients in:</h4>
              <div class="flex flex-wrap gap-2">
                {region.countries.map((country) => (
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                    {country}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- UK Local Areas -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          UK Local Presence
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Based in Milton Keynes with excellent transport links across the UK. 
          In-person meetings available for local clients when beneficial to the project.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Local Areas -->
        <div class="lg:col-span-2">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-6">UK Service Areas</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {ukServiceAreas.map((area) => (
                <div class="bg-white rounded-lg p-4 shadow-sm">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="font-semibold text-gray-900">{area.name}</h4>
                    <span class={`px-2 py-1 rounded-full text-xs font-medium ${
                      area.type === 'local' 
                        ? 'bg-green-100 text-green-800' 
                        : 'bg-blue-100 text-blue-800'
                    }`}>
                      {area.type}
                    </span>
                  </div>
                  <p class="text-gray-600 text-sm">{area.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="space-y-6">
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Milton Keynes, UK</div>
                  <div class="text-gray-600 text-sm">Central England location</div>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">{BUSINESS_INFO.contact.phone}</div>
                  <div class="text-gray-600 text-sm">UK mobile number</div>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <div class="font-medium text-gray-900">{BUSINESS_INFO.contact.email}</div>
                  <div class="text-gray-600 text-sm">Best for initial contact</div>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-blue-50 rounded-xl p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">In-Person Options</h3>
            <p class="text-gray-600 text-sm mb-4">
              Available for local UK clients when face-to-face meetings add value:
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Project kickoff meetings
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Requirements workshops
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Technical consultations
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Project delivery sessions
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Remote Works -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">
        Benefits of Remote Development
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div class="bg-white rounded-xl p-6 shadow-lg">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Focused Development</h3>
          <p class="text-gray-600 text-sm">
            No commute time means more focus on your project. 
            Development work benefits from uninterrupted concentration.
          </p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-lg">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Cost Effective</h3>
          <p class="text-gray-600 text-sm">
            Lower overhead costs mean better value for clients. 
            No travel expenses or location premiums.
          </p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-lg">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Flexible Scheduling</h3>
          <p class="text-gray-600 text-sm">
            Work can progress across different timezones with coordinated 
            communication and async development practices.
          </p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-lg">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Clear Communication</h3>
          <p class="text-gray-600 text-sm">
            Remote work requires excellent documentation and structured 
            communication, leading to better project clarity.
          </p>
        </div>
      </div>

      <div class="bg-blue-50 rounded-xl p-8">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Ready to Start Your Project?</h3>
        <p class="text-gray-600 mb-6">
          Whether you're based locally in Milton Keynes or anywhere else in the world, 
          I'm equipped to deliver professional Python development services.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            Discuss Your Project
          </a>
          <a 
            href="mailto:{BUSINESS_INFO.contact.email}" 
            class="px-8 py-3 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors font-medium"
          >
            Send Email
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Smooth animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }
  
  .animate-on-scroll.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
</style>